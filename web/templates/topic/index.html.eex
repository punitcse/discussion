<table>
  <%= for topic <- @topics do %>
    <tr>
      <td> <%= topic.title %> </td>
      <td> <%= link "Edit", to: topic_path(@conn, :edit, topic)%></td>
      <td> <%= link "Delete", to: topic_path(@conn, :delete, topic), method: :delete %></td>
    </tr>
  <% end %>
</table>

<div>
  <%= link to: topic_path(@conn, :new) do %>
    <div>Add Topic</div>
  <% end %>
</div>
